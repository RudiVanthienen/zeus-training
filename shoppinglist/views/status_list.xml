<?xml version="1.0"?>
<odoo>
    <record id="status_list_view_tree" model="ir.ui.view">
        <field name="name">status.list.tree</field>
        <field name="model">status.list</field>
        <field name="arch" type="xml">
            <tree string="Status" editable="bottom">
                <field name="name"/>
                <field name="sequence" widget="handle"/>
            </tree>
        </field>
    </record>

    <record id="status_list_view_action" model="ir.actions.act_window">
        <field name="name">Status List</field>
        <field name="res_model">status.list</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>